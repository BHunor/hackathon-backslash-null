<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mood.MoodFragment"
    android:id="@+id/fragment_mood">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkblack"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="358dp"
            android:layout_height="56dp"
            android:text="How do you feel?"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <Button
            android:id="@+id/happy_btn"

            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/yellow"
            android:text="Happy"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:cornerRadius="63dp"
            app:iconTint="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/sad_btn"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#127681"
            android:text="Sad"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:cornerRadius="63dp"
            app:iconTint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/tired_btn"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#ffffec"
            android:text="Tired"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:cornerRadius="63dp"
            app:iconTint="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/happy_btn" />

        <Button
            android:id="@+id/romantic_btn"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="136dp"
            android:backgroundTint="#E4508F"
            android:text="Romantic"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="63dp"
            app:iconTint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/happy_btn" />

        <Button
            android:id="@+id/adventure_btn"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="#E21818"
            android:text="Adventure"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:cornerRadius="63dp"
            app:iconTint="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tired_btn" />

        <Button
            android:id="@+id/bored_btn"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/gray"
            android:paddingHorizontal="30dp"
            android:paddingVertical="20dp"
            android:text="Bored"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="63dp"
            app:iconTint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sad_btn" />

        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="156dp"
            android:layout_marginTop="4dp"
            android:text="@string/search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adventure_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>