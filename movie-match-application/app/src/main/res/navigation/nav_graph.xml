<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_welcome_search">

    <fragment
        android:id="@+id/fragment_welcome_search"
        tools:layout="@layout/fragment_welcome_search"
        android:name="edu.hackathon.moviematch.ui.welcome.WelcomeSearchFragment"
        android:label="@string/welcome">
        <action
            android:id="@+id/action_fragment_welcome_search_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_fragment_welcome_search_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_fragment_welcome_search_to_registerFragment2"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="edu.hackathon.moviematch.ui.welcome.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_fragment_welcome_search"
            app:destination="@id/fragment_welcome_search" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="edu.hackathon.moviematch.ui.authentication.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="edu.hackathon.moviematch.ui.authentication.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>
    <fragment
        android:id="@+id/feedFragment"
        android:name="edu.hackathon.moviematch.ui.feed.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" />
</navigation>